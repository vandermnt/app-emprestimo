                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app2:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
