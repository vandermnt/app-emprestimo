                    app2:layout_constraintHorizontal_bias="0.494"
                    app2:layout_constraintVertical_bias="0.905" app2:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:src="@android:drawable/ic_menu_month"
                    android:layout_width="46dp"
                    android:layout_height="42dp"
                    android:id="@+id/imageView" app2:layout_constraintStart_toStartOf="@+id/date_nasc"
                    app2:layout_constraintEnd_toEndOf="@+id/date_nasc"
                    app2:layout_constraintTop_toTopOf="@+id/date_nasc"
                    app2:layout_constraintBottom_toBottomOf="@+id/date_nasc"
                    app2:layout_constraintHorizontal_bias="0.972"
                    app2:layout_constraintVertical_bias="0.0"/>
            <ImageView
                    android:src="@drawable/ico_addpeople"
                    android:layout_width="0dp"
                    android:layout_height="61dp"
                    android:id="@+id/imageView4"
                    android:layout_marginBottom="8dp"
                    app2:layout_constraintBottom_toTopOf="@+id/name"
